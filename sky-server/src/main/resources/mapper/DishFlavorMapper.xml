<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">
    <select id="queryByDishId" resultType="com.sky.entity.DishFlavor">
        select id, dish_id, name, value
        from dish_flavor
        where dish_id = #{dishId}
    </select>

    <insert id="insert">
        insert into sky_take_out.dish_flavor
        <set>
            <if test="id != null">id = #{id},</if>
            <if test="dishId != null">dish_id = #{dishId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="value != null">value = #{value}</if>
        </set>
    </insert>

    <update id="update">
        update dish_flavor
        <set>
            <if test="id != null">id = #{id},</if>
            <if test="dishId != null">dish_id = #{dishId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="value != null">value = #{value}</if>
        </set>
    </update>

    <delete id="delete">
        delete from dish_flavor where dish_id in
        <foreach collection="ids" item="dishId" separator="," open="(" close=")">
            #{dishId}
        </foreach>
    </delete>

</mapper>